@page
@model asp_presentacion.Pages.Ventanas.Metodos_De_PagosModel
@{
    ViewData["Titulo"] = "Métodos de Pago";
}
<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Métodos de Pago</h3>
            </div>
            <div align="left" class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Editar Método de Pago</h3>
                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Tipo de Método de Pago</label>
                            <div class="col-lg-6">
                                <input id="nmTipoMetodoPago"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Tipo_Metodo_Pago" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <h2>Mensaje</h2>
                        <h4>¿Desea borrar el método de pago?</h4>
                        <h6>@Model.Actual!.Tipo_Metodo_Pago</h6>
                        <br />
                        <input type="submit" value="Borrar" asp-page-handler="BtBorrar" class="btn btn-secondary" />
                        <input type="submit" value="Cerrar" asp-page-handler="BtCancelar" class="btn btn-secondary" />
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)
            {
                <input id="flTipoMetodoPago" class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Tipo_Metodo_Pago" placeholder="Tipo de Método de Pago" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Id</th>
                            <th>Tipo de Método de Pago</th>
                            <th class="cl_actions">Acción</th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento.Id</td>
                                    <td>@elemento.Tipo_Metodo_Pago</td>
                                    <td>
                                        <input type="submit" value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit" value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>
